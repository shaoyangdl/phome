<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/transparent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.lzyzsd.circleprogress.ArcProgress
            android:focusable="true"
            android:id="@+id/arc_progress"
            android:background="@android:color/transparent"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:arc_progress="40"
            app:arc_bottom_text="MEMORY"
            app:arc_bottom_text_size="30sp"
            app:arc_text_color="@android:color/white"
            app:arc_unfinished_color="@android:color/white"
            app:arc_stroke_width="10dp"
            app:arc_finished_color="@android:color/holo_orange_dark"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>